{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Start Resume Backend",
			"type": "shell",
			"command": "node",
			"args": ["src/index.js"],
			"options": {
				"cwd": "${workspaceFolder}/resume-builder-backend"
			},
			"group": "build",
			"isBackground": true,
			"problemMatcher": []
		},
		{
			"command": "ng",
			"args": [
				"serve",
				"--open"
			],
			"options": {
				"cwd": "${workspaceFolder}/resume-builder-angular"
			},
			"group": "build",
			"isBackground": true,
			"label": "Start Angular Frontend",
			"problemMatcher": [],
			"type": "shell"
		}
	]
}